@model IEnumerable<Book>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container-md">
    <table class="table table-bordered table-striped" style="width: 80%; text-align:center">
        <thead>
            <tr>
                <th width="80%">
                    Books
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.Title
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Home" asp-action="ShowBookDetails" asp-route-id="@obj.Id" class="btn btn-primary mx-2">Details</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
